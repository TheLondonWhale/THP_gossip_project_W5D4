
<% if @current_user %>
  <h1>Bienvenue <%= @current_user.first_name %> !</h1>
<% else %>
  <h1>Bienvenue visiteur anonyme !</h1>
  <a href="/registration/new">S'identifier</a>
<% end %>

<table>
  <tbody>
    <thead>
      <tr>
        <td>Numéro du gossip</td>
        <td>Titre du gossip</td>
        <td>Contenu du gossip</td>
        <td>Auteur du contenu</td>
        <td>Nombre de commentaires</td>
        <td>Lien du gossip</td>
      </tr>
    </thead>
  <% Gossip.all.each do |gossip| %>
    <tr>
      <td><%= gossip.id %></td>
      <td><%= gossip.title %></td>
      <td><%= gossip.content %></td>
      <td><%= gossip.anonymous_gossiper %></td>
      <td><%= gossip.comments.count%></td>
      <td><%= link_to 'Voir le gossip', gossip_path(gossip.id) %>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Créer un nouveau gossip', new_gossip_path %>
